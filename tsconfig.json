{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": [
    "topics/*.ts",
    "topics/modules/*.ts",
    "gotchas/*.ts"
  ]
}